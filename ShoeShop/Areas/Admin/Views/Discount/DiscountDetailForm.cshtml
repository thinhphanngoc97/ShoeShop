@model Model.EF.DISCOUNT_CODE

<div class="row form-group">
    <div class="col-12 col-md-6">
        <label class=" form-control-label">ID</label>
        @Html.TextBoxFor(model => model.Id, new { @class = "form-control", @readonly = "" })
    </div>
	<div class="col-12 col-md-6">
		<label class=" form-control-label">Mã giảm giá</label>
		@Html.TextBoxFor(model => model.Code, new { @class = "form-control" })
		@Html.ValidationMessageFor(model => model.Code, "", new { @class = "text-danger" })
	</div>
	<div class="col-12 col-md-6">
		<label class=" form-control-label">Giảm (%)</label>
		@Html.TextBoxFor(model => model.Discount_Amount, new { @class = "form-control" })
		@Html.ValidationMessageFor(model => model.Discount_Amount, "", new { @class = "text-danger" })
	</div>
	<div class="col-12 col-md-6">
		<label class=" form-control-label">Ngày bắt đầu</label>
		@Html.TextBoxFor(model => model.Start_Date, new { @class = "form-control" })
		@Html.ValidationMessageFor(model => model.Start_Date, "", new { @class = "text-danger" })
	</div>
	<div class="col-12 col-md-6">
		<label class=" form-control-label">Ngày kết thúc</label>
		@Html.TextBoxFor(model => model.End_Date, new { @class = "form-control" })
		@Html.ValidationMessageFor(model => model.End_Date, "", new { @class = "text-danger" })
	</div>
</div>
<div style="padding:5px 20px">
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
</div>
<div class="action_button_form">
    <button type="submit" class="btn btn-primary">
        <i class="zmdi zmdi-save"></i> Lưu thay đổi
    </button>
</div>
@model Model.EF.MANUFACTURER

<div class="row form-group">
    <div class="col-12 col-md-6">
        <label class=" form-control-label">ID</label>
        @Html.TextBoxFor(model => model.Id, new { @class = "form-control", @readonly = "" })
    </div>
    <div class="col-12 col-md-6">
        <label class=" form-control-label">Tên thương hiệu</label>
        @Html.TextBoxFor(model => model.Name, new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
    </div>
    <div class="col-12 col-md-6">
        <label class=" form-control-label">Quốc gia</label>
        @Html.TextBoxFor(model => model.Country, new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.Country, "", new { @class = "text-danger" })
    </div>
</div>
<div class="action_button_form">
    <button type="submit" class="btn btn-primary">
        <i class="zmdi zmdi-save"></i> Lưu thay đổi
    </button>
</div>
<div style="padding:5px 20px">
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
</div>


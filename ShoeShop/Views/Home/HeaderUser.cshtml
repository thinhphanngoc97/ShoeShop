@model Model.EF.USER

@{if (Model == null)
    {
        <a href="#" class="nav-link dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true"
           aria-expanded="false"><span class="fa fa-user"></span></a>
        <ul class="dropdown-menu">
            <li class="nav-item user_name"><a class="nav-link" href="/dang-nhap">Đăng nhập</a></li>
            <li class="nav-item"><a class="nav-link" href="/dang-ki">Đăng kí</a></li>
        </ul>
    }
    else
    {
        var defaultAvatar = Url.Content("~/Content/img/default_user.png");
        <a href="#" class="nav-link dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true"
           aria-expanded="false"><img class="rounded-circle avatar" src="@(String.IsNullOrEmpty(Model.Avatar) ? defaultAvatar : Model.Avatar)" /></a>
        <ul class="dropdown-menu">
            <li class="nav-item user_name"><h6>@Model.Name</h6></li>
            <li class="nav-item"><a class="nav-link" href="#">Quản lý tài khoản</a></li>
            <li class="nav-item"><a class="nav-link" href="@Url.Action("Logout", "Login")">Đăng xuất</a></li>
        </ul>
    }
}